{
  "private": true,
  "devDependencies": {
    "babel-cli": "6.18.0",
    "coveralls": "2.11.15",
    "cross-env": "3.1.3",
    "lerna": "2.0.0-beta.31",
    "nyc": "10.0.0",
    "rimraf": "2.5.4"
  },
  "scripts": {
    "build": "lerna --concurrency 6 run build",
    "clean": "lerna --concurrency 6 run clean && rimraf coverage .nyc_output",
    "cover": "lerna --concurrency 6 run cover && cross-env NODE_ENV=cover nyc npm test",
    "coveralls": "cross-env NODE_ENV=cover nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "install": "lerna --concurrency 6 bootstrap",
    "lint": "lerna --concurrency 6 run lint",
    "publish": "lerna publish",
    "reset": "lerna --concurrency 6 run reset && rimraf node_modules",
    "test": "lerna --concurrency 6 run test"
  },
  "nyc": {
    "reporter": [
      "html"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
