{
  "name": "uniforms-repository",
  "private": true,
  "scripts": {
    "build": "lerna exec --ignore docs -- babel --config-file ../../.babelrc --out-dir . src",
    "clean": "rimraf coverage packages/*/*.js",
    "coverage": "jest --coverage",
    "coverage:report": "codecov",
    "flow": "flow",
    "flow-typed": "flow-typed install",
    "install": "npm run build",
    "lint": "npm run lint:code && npm run lint:text",
    "lint:code": "eslint docs packages",
    "lint:text": "prettier --check **/*.md{,x}",
    "postinstall": "lerna bootstrap",
    "prereset": "npm run clean",
    "pretest": "npm run lint && npm run flow",
    "publish": "npm run clean && npm run build && lerna publish",
    "reset": "rimraf node_modules docs/node_modules packages/*/node_modules",
    "test": "jest"
  },
  "dependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.3.4",
    "@babel/plugin-proposal-class-properties": "7.3.4",
    "@babel/plugin-transform-runtime": "7.3.4",
    "@babel/preset-env": "7.3.4",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@material-ui/core": "3.9.2",
    "antd": "3.14.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.1.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "codecov": "3.2.0",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.10.0",
    "eslint": "5.15.1",
    "eslint-config-prettier": "4.1.0",
    "eslint-config-vazco": "4.1.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-vazco": "1.0.0",
    "flow-bin": "0.94.0",
    "flow-typed": "2.5.1",
    "graphql": "14.1.1",
    "invariant": "2.2.4",
    "jest": "24.1.0",
    "lerna": "3.13.1",
    "prettier": "1.16.4",
    "react": "16.8.4",
    "react-dom": "16.8.4",
    "react-test-renderer": "16.8.4",
    "rimraf": "2.6.3",
    "simpl-schema": "1.5.5",
    "warning": "4.0.3"
  },
  "engines": {
    "npm": ">=5.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/*/src/*.js"
    ],
    "coverageReporters": [
      "html",
      "lcovonly",
      "text-summary"
    ],
    "moduleNameMapper": {
      "^meteor/([^:]*):(.*)$": "<rootDir>/packages/uniforms/__mocks__/meteor/$1_$2.js",
      "^meteor/([^:]*)$": "<rootDir>/packages/uniforms/__mocks__/meteor/$1.js",
      "^simpl-schema$": "<rootDir>/node_modules/simpl-schema",
      "^uniforms([^/]*)(.*)$": "<rootDir>/packages/uniforms$1/src$2"
    },
    "setupFiles": [
      "./scripts/setupEnzyme.js",
      "./scripts/setupPolyfill.js"
    ],
    "testMatch": [
      "**/__tests__/**/!(_)*.js"
    ],
    "transform": {
      "^.+\\.jsx?$": "./scripts/transform.js"
    }
  }
}
