{
  "private": true,
  "devDependencies": {
    "lerna": "2.0.0-beta.20"
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean && ./packages/uniforms/node_modules/.bin/rimraf coverage .nyc_output",
    "cover": "lerna run cover && ./packages/uniforms/node_modules/.bin/nyc npm test",
    "install": "lerna bootstrap",
    "lint": "lerna run lint",
    "publish": "lerna publish",
    "reset": "lerna run reset && ./packages/uniforms/node_modules/.bin/rimraf node_modules",
    "test": "lerna run test"
  },
  "nyc": {
    "reporter": [
      "html"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
